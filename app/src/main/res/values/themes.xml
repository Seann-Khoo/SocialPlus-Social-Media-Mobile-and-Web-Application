<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SocialPlusApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/grey</item>
        <!-- Customize your theme here. -->
        <item name="android:itemTextAppearance">@style/menuItem</item>
    </style>
    <style name="menuItem" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/orange</item>
        <item name="android:fontFamily">@font/product_sans</item>
    </style>
    <style name="title">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/product_sans</item>
    </style>
</resources>